# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/amp_email_platform

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Services
REPLICATE_API_KEY=your_replicate_api_key_here
REPLICATE_MODEL=meta/llama-2-70b-chat:latest
PRODUCT_SCRAPER_BASE_URL=https://product-scraper-217130114839.us-east1.run.app

# Storage Configuration (Cloudflare R2)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=amp-email-templates
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-custom-domain.com
CDN_BASE_URL=https://cdn.amp-platform.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=info

# Webhook Configuration
WEBHOOK_TIMEOUT_MS=5000

# Cost Configuration
AI_GENERATION_COST_USD=0.0024
SCRAPING_COST_USD=0.0003
CDN_COST_USD=0.0010

# Qdrant Vector Database Configuration
QDRANT_URL=https://87c4bedb-f2e4-4439-aadd-8387cf5643fc.us-east4-0.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# OpenAI Configuration (for CLIP embeddings and GPT-4V vision analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_VISION_MODEL=gpt-4-vision-preview

# OpenRouter Configuration (for image-to-HTML template generation)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.5-flash

# Interactive Shopping Experience Configuration
IMAGE_AI_SERVICE_URL=https://api.remove.bg/v1.0
IMAGE_AI_API_KEY=your_removebg_api_key_here
EXTRACT_PICS_API_KEY=your_extractpics_api_key_here
LANDING_PAGE_BASE_URL=https://cart.amp-platform.com

# Feature Flags
ENABLE_INTERACTIVE_TEMPLATES=false
ENABLE_IMAGE_ENHANCEMENT=false
ENABLE_BRAND_ANALYSIS=true
ENABLE_AGENT_GENERATION=false
ENABLE_CART_HANDOFF=false

# Agent System Configuration
AGENT_ORCHESTRATOR_VERSION=1.0.0
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_MS=30000

# Image Enhancement Configuration
BACKGROUND_REMOVAL_ENABLED=true
BACKGROUND_REGENERATION_ENABLED=true
IMAGE_LABELING_ENABLED=true
DEFAULT_BACKGROUND_STYLE=professional
MIN_IMAGE_WIDTH=800
MAX_IMAGES_PER_PRODUCT=10

# Brand Analysis Configuration
BRAND_ANALYSIS_DEPTH=standard
BRAND_CACHE_TTL_HOURS=168
PRODUCT_CACHE_TTL_HOURS=24

# Cart Handoff Configuration
URL_SHORTENER_ENABLED=true
URL_SHORTENER_TTL_HOURS=24
SESSION_STORAGE_TTL_HOURS=1
MAX_URL_LENGTH=1800

# Performance Configuration
PARALLEL_IMAGE_PROCESSING=true
MAX_PARALLEL_IMAGES=5
BACKGROUND_JOB_ENABLED=true

# Monitoring Configuration
ENABLE_PERFORMANCE_TIMING=true
ENABLE_COST_TRACKING=true
ENABLE_ANALYTICS_TRACKING=true
CORRELATION_ID_HEADER=X-Correlation-ID
