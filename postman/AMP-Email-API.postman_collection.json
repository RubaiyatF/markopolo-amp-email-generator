{
  "info": {
    "name": "AMP Email Generation API",
    "description": "Complete API collection for AMP Email Generation Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{API_KEY}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "API_KEY",
      "value": "amp_key_test123456789",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Status",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "Readiness Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/ready",
              "host": ["{{baseUrl}}"],
              "path": ["ready"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Standard Endpoints",
      "item": [
        {
          "name": "Generate Templates",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product_urls\": [\"https://www.amazon.com/dp/B09KMRWYYJ\"],\n  \"campaign_context\": {\n    \"type\": \"promotional\",\n    \"goal\": \"conversion\"\n  },\n  \"user_context\": {\n    \"firstName\": \"John\",\n    \"email\": \"john@example.com\"\n  },\n  \"options\": {\n    \"variations\": 3,\n    \"preserve_merge_tags\": true\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/generate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "generate"]
            }
          },
          "response": []
        },
        {
          "name": "Batch Campaign",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"campaign_name\": \"Summer Sale 2024\",\n  \"product_urls\": [\n    \"https://amazon.com/product1\",\n    \"https://amazon.com/product2\"\n  ],\n  \"campaign_context\": {\n    \"type\": \"promotional\",\n    \"goal\": \"conversion\"\n  },\n  \"max_concurrent\": 10,\n  \"chunk_size\": 100,\n  \"webhook_url\": \"https://myapp.com/webhook/complete\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/batch/campaign",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "batch", "campaign"]
