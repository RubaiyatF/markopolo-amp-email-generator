              "raw": "{\n  \"feedback\": \"Make the subject line more engaging\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/regenerate/:contentId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "regenerate", ":contentId"],
              "variable": [
                {
                  "key": "contentId",
                  "value": "content-uuid-here"
                }
              ]
            }
          },
          "response": []
        }
      ]
